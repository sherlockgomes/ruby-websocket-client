# Configurações do WebSocket Client
# Copie este arquivo para .env e configure com seus valores

# URL do servidor WebSocket
HERMES_WS_URL=wss://seu-servidor-websocket.com/websocket

# Identificador único do cliente
HERMES_WS_IDENTIFIER=meu-cliente-unico

# Habilitar logs detalhados (true/false)
HERMES_WS_LOG=true

# Configurações específicas para diferentes ambientes
# Desenvolvimento
HERMES_WS_URL_DEVELOPMENT=wss://dev-servidor.com/websocket
HERMES_WS_IDENTIFIER_DEVELOPMENT=cliente-dev-001

# Teste
HERMES_WS_URL_TEST=wss://test-servidor.com/websocket
HERMES_WS_IDENTIFIER_TEST=cliente-test-001

# Produção
HERMES_WS_URL_PRODUCTION=wss://prod-servidor.com/websocket
HERMES_WS_IDENTIFIER_PRODUCTION=cliente-prod-001

# Configurações adicionais para casos específicos
# Chat
CHAT_WS_URL=wss://chat.exemplo.com/websocket

# Monitoramento
MONITORING_WS_URL=wss://monitoring.exemplo.com/websocket

# E-commerce
ECOMMERCE_WS_URL=wss://sync.exemplo.com/websocket
STORE_ID=loja_001

# Servidores monitorados (separados por vírgula)
MONITORED_SERVERS=server1,server2,server3
MONITORED_SERVICES=api,web,worker,redis,postgresql
